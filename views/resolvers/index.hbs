<div class="d-flex flex-wrap">
  {{#each resolvers }}
  <div class="card col-lg-3 col-md-5 col-11 m-3 p-0">

    <a href="{{this.key}}/index.html" title="{{this.name}}"><img alt="{{this.name}}" class="card-img-top" src="{{this.logo}}"></a>

    <div class="card-body">

      <h5 class="card-title text-center">{{this.name}}</h5>

      <p class="card-text">{{#equals this.description "LATER"}}{{else}}{{this.description}}{{/equals}}</p>

    </div>

    <div class="card-footer">
      {{#if this.location}}
      <img alt="{{this.location}}" class="float-end" src="/images/flags/{{this.location}}.png" style="height:3em;"
        title="{{this.location}}" />
      {{/if}}
      <a href="{{this.key}}/index.html">More...</a><br/>
      <small class="text-muted">
        {{#each this.tags}}
          <span class="badge text-bg-primary">{{this}}</span>
        {{/each}}
      </small>
    </div>
  </div>
  {{/each}}
</div>

<p><a href="all.html">View all</a></p>
